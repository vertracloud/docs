{
  "openapi": "3.1.0",
  "info": {
    "title": "OpenAPI Plant Store",
    "description": "A sample API that uses a plant store as an example to demonstrate features in the OpenAPI specification",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.vertracloud.app"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
     "/v1/status": {
      "get": {
        "description": "Checks if the infrastructure is fully operational.",
        "responses": {
          "200": {
            "description": "Current infrastructure status details.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["healthy", "unknown", "degraded"]
                    },
                    "response": {
                      "type": "string",
                      "enum": ["All systems operational", "Some systems are degraded", "Some systems are down"]
                    }
                  },
                  "required": ["status", "response"]
                }
              }
            }
          },
          "400": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "code": { "type": "string" },
                    "response": { "type": "string" }
                  },
                  "required": ["status", "code", "response"]
                }
              }
            }
          }
        },
        "security": []
      }
    },
    "/v1/users/@me": {
      "get": {
        "description": "Returns the main data of all applications, databases, and information about the authenticated user's plan.",
        "responses": {
          "200": {
            "description": "User information including applications, databases, and plan details.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success or error"
                    },
                    "response": {
                      "type": "object",
                      "properties": {
                        "plan_id": {
                          "type": "string",
                          "description": "The user's current plan ID"
                        },
                        "applications": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "owner_plan_id": { "type": "string" },
                              "type": { "type": "string" },
                              "status": { "type": "string" },
                              "cluster": { "type": "string" },
                              "language": { "type": "string" },
                              "subdomain": { "type": "string" },
                              "custom_domain": { "type": "string", "nullable": true },
                              "created_at": { "type": "string", "format": "date-time" },
                              "updated_at": { "type": "string", "format": "date-time" },
                              "last_commit": { "type": "string", "format": "date-time" },
                              "last_backup": { "type": "string", "format": "date-time", "nullable": true }
                            }
                          }
                        },
                        "databases": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "owner_plan_id": { "type": "string" },
                              "type": { "type": "string" },
                              "plan_id": { "type": "string" },
                              "cluster": { "type": "string" },
                              "status": { "type": "string" },
                              "duration": { "type": "integer", "example": 30 },
                              "host": { "type": "string" },
                              "port": { "type": "integer", "example": "6379" },
                              "created_at": { "type": "string", "format": "date-time" },
                              "updated_at": { "type": "string", "format": "date-time" },
                              "purchased_at": { "type": "string", "format": "date-time" },
                              "expires_at": { "type": "string", "format": "date-time" },
                              "last_backup": { "type": "string", "format": "date-time", "nullable": true }
                            }
                          }
                        },
                        "plan": {
                          "type": "object",
                          "properties": {
                            "id": { "type": "string" },
                            "name": { "type": "string" },
                            "expires_at": { "type": "string", "format": "date-time", "nullable": true },
                            "duration": { "type": "integer", "example": 30  },
                            "memory": {
                              "type": "object",
                              "properties": {
                                "limit": { "type": "integer" },
                                "used": { "type": "integer" }
                              }
                            }
                          }
                        },
                        "created_at": { "type": "string", "format": "date-time" },
                        "updated_at": { "type": "string", "format": "date-time" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "code": { "type": "string" },
                    "response": { "type": "string" }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}